<%- include('../partials/head.ejs')  %>
        <link rel="stylesheet" href="/css/forms.css" />
        <link rel="stylesheet" href="/css/product.css" />
    </head>

        <%- include('../partials/navigation.ejs') %>

        <main>
            <% if (errorMsg) { %>
                <div class="user-message user-message--error"><%= errorMsg %></div>
            <% } %>
            <form
                class="product-form"
                action="/admin/<%= editing ? "edit-product" : 'add-product' %>"
                method="POST"
                enctype="multipart/form-data"
            >
                <input type="hidden" name="_csrf" value="<%= csrf %>" />

                <div class="form-control">
                    <label for="title">Title</label>
                    <input
                        type="text"
                        name="title"
                        id="title"
                        value="<%= (editing || hasErrors) ? product.title : '' %>"
                        class="<%= validationErrors.find(e => e.path === 'title') ? "invalid" : "" %>"
                    />
                </div>

                <!-- <div class="form-control">
                    <label for="imageUrl">Image URL</label>
                    <input
                        type="text"
                        name="imageUrl"
                        id="imageUrl"
                        value="<%= (editing || hasErrors) ? product.imageUrl : '' %>"
                        class="<%= validationErrors.find(e => e.path === 'imageUrl') ? "invalid" : "" %>"
                    />
                </div> -->
                <div class="form-control">
                    <label for="image">Image</label>
                    <input
                        type="file"
                        name="image"
                        id="image"
                    />
                </div>

                <div class="form-control">
                    <label for="price">Price</label>
                    <input
                        type="number"
                        name="price"
                        id="price"
                        step="0.01"
                        value="<%= (editing || hasErrors) ? product.price : '' %>"
                        class="<%= validationErrors.find(e => e.path === 'price') ? "invalid" : "" %>"
                    />
                </div>

                <div class="form-control">
                    <label for="description">Description</label>
                    <textarea
                        type="text"
                        name="description"
                        id="description"
                        class="<%= validationErrors.find(e => th === 'description') ? "invalid" : "" %>"
                    ><%= (editing || hasErrors) ? product.description : '' %></textarea>
                </div>
                <% if (editing) { %>
                    <input type="hidden" name="productId" value="<%= product._id %>">
                <% } %>

                <button class="btn" type="submit"> <%= editing ? "Edit Product" : "Add Product" %> </button>
            </form>
        </main>
<%- include('../partials/end.ejs') %>